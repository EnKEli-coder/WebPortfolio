---
import Layout from '../layouts/Layout.astro';
import GitHub from '../components/icons/GitHub.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import File from '../components/icons/File.astro';
import SocialPills from '../components/SocialPills.astro'
---

<Layout title="Portfolio Omar Romero">
	<main class="mx-auto p-4 w-[640px]">
		<section id="presentation" class="flex gap-10">
			<figure>
				<img src="./public/photo.webp" alt="Omar Romero" class="rounded-full w-40 h-40 object-cover">
			</figure>
			<section class="flex flex-col gap-3">
				<h1 class="font-bold text-primary text-4xl">Hi, I'm Omar Romero</h1>
				<div class="text-2xl">
					<p class="text-secondary">Web developer from Mexico,</p>
					<p>I like to work in great things.</p>
				</div>
				<div class="flex gap-2">
					<SocialPills 
					href="https://github.com/EnKEli-coder" 
					>
						<GitHub class="w-6 h-6"/>
						GitHub
					</SocialPills>
					<SocialPills 
					href="https://www.linkedin.com/in/omar-ro-go/" 
					>
						<LinkedIn class="w-5 h-5"/>
						LinkedIn
					</SocialPills>
					<SocialPills 
					href="./public/CV.pdf" 
					download = "Omar Romero CV"
					>
						<File class="w-6 h-6"/>
						Download CV
					</SocialPills>
				</div>
			</section>
		</section>
		<section id="experience">
			<h2>Experience</h2>
			<section>
				<div>
					<h3>Full Stack Developer</h3>
					<p>Secretariat of Finance of Campeche</p>
					<p>2021 - Current position</p>
				</div>
				<div>
					<p>I developed web applications, mainly with React, 
					.Net and SQL server. Automation of key processes in payroll, 
					as well as tools that lighten the workload of my colleagues.</p>
				</div>
			</section>
		</section>
		<section id="projects">
			<h2>Projects</h2>
			<section>

			</section>
		</section>
		<section id="about-me">
			<h2>About me</h2>
			<p>
				
			</p>
		</section>
	</main>
</Layout>

