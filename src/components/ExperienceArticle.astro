---
const {position, company, period, description} = Astro.props;

---

<article 
  class="flex gap-4 ml-4"
>
  <div class="absolute w-4 h-4 bg-gray-200 rounded-full mt-1.5 -start-2 border border-white dark:border-gray-900 dark:bg-secondary"></div>
  <div class="text-nowrap flex flex-col flex-1 min-w-[265px]">
    <h3 class="text-xl font-medium text-secondary mb-[5px]">{position}</h3>
    <p class="text-base font-bold">{company}</p>
    <p class="font-sm">{period}</p>
  </div>
  <div class="pl-2 border-l-2 border-secondary" >
    <p class="leading-tight">{description}</p>
  </div>
</article>