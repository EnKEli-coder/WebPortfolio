---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Omar Romero's web portfolio" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="text-white mx-auto w-fit text-base">
			<nav class="flex gap-6 p-3">
				<a href="">Home</a>
				<a href="">Experience</a>
				<a href="">Projects</a>
				<a href="">About me</a>	
			</nav>
		</header>
		<slot />
		<footer></footer>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #0D0D0D;
		color: white;
	}
</style>
